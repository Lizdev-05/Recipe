<div class="divide-y divide-gray-200">
					<div class="py-4 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
						<%= form_with model: @food, class: "mt-16 px-8 py-4 w-96 bg-white rounded-lg shadow-lg h-fit" do |form| %>
                            <div class="my-4 relative">
                            <%= form.label :name, "Name", class: "absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
                            <%= form.text_field :name, placeholder: "Name", required: true, autofocus: true, class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" %>
                            </div>
                            <div class="my-4 relative">
                            <%= form.label :quantity, "Quantity", class: "absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
                            <%= form.number_field :quantity, placeholder: 0, required: true, autofocus: true, class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" %>
                            </div>
                            <div class="my-4 relative">
                            <%= form.label :measurement, "Measurement Unit", class: "absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
                            <%= form.text_field :measurement, placeholder: "kg", required: true, autofocus: true, class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" %>
                            </div>
                            <div class="my-4 relative">
                            <%= form.label :price, "Price", class: "absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
                            <%= form.number_field :price, placeholder: 100, required: true, autofocus: true, class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" %>
                            </div>
                            <div class="bg-blue-600 hover:bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg text-white rounded-md px-2 py-1 text-center font-bold cursor-pointer mt-8">
                            <%= form.submit "Add Food", data: { disable_with: "Loading" } %>
                            </div>
                        <% end %>				
                    </div>
                </div>