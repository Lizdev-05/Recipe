
<!-- component -->
<section class="flex flex-col md:flex-row h-screen items-center">

  <div class="bg-indigo-600 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
    <img src="https://source.unsplash.com//eeqbbemH9-c" alt="" class="w-full h-full object-cover">
  </div>
  <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12
        flex items-center justify-center">
  <div class="w-full h-100">
  <div class="mt-16 px-8 py-4 w-96 h-fit bg-white rounded-lg shadow-lg">
    <h2 class="text-xl font-bold text-center text-gray-700">Welcome back, Dear User!</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="my-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-4 py-2 rounded-md mt-2 w-full" %>
      </div>
      <div class="my-4">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "px-4 py-2 rounded-md mt-2 w-full" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="my-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="bg-gray-900 hover:bg-gray-800 rounded-lg py-2 text-center cursor-pointer mb-4 font-bold text-gray-100">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
    <p class="mt-8">Need an account? <%= render "devise/shared/links" %></p>
    
  </div>
   </div>   
  </div>

</section>
